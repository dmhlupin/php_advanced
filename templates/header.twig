<div class="header">
    <div class="logo"><a class="logoLink" href="/">Интернет-магазин</a></div>
    <div class="cart"><a href="/basket" class="cartLink">Корзина <span id="count">{{ count }}</span></a></div>
    <div class="user">
        {% if isAuth == true %}
            {{ userName }} <a href="/auth/logout"> Выход </a>
        {% else %}
            <form action="/auth/login" method="POST">
                <input type="text" name="login" placeholder="admin" value="admin">
                <input type="password" name="password" placeholder="123" value="123">
                <input type="submit" name="submit" value="Войти">
            </form>
        {% endif %}
    </div>
</div>